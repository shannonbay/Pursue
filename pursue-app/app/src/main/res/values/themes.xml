<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 12dp corner radius for photo thumbnails in activity feed -->
    <style name="ShapeAppearance.App.Corner.Small" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Pursue" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color from UI spec -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color from UI spec -->
        <item name="colorSecondary">#F9A825</item>
        <item name="colorSecondaryVariant">#F57F17</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Surface colors from UI spec -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Splash Screen (Android 12+) -->
        <item name="android:windowSplashScreenBackground">@color/primary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/primary</item>
        
        <!-- Snackbar styling to match app theme -->
        <item name="snackbarStyle">@style/Widget.Material3.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.Material3.Button.TextButton.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.Material3.Snackbar.TextView</item>
    </style>

    <style name="ThemeOverlay.Pursue.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/on_surface</item>
        <item name="android:textColorSecondary">@color/on_surface_variant</item>
        <item name="android:colorBackground">@color/surface</item>
    </style>
</resources>