<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cache directory for avatar images -->
    <cache-path name="avatar_cache" path="avatars/" />

    <!-- Cache directory for invite QR code sharing -->
    <cache-path name="invite_qr" path="invite_qr/" />

    <!-- Cache directory for shareable milestone card exports -->
    <cache-path name="milestone_cards" path="milestone_cards/" />
    
    <!-- External files directory for camera photos -->
    <external-files-path name="camera_photos" path="Pictures/" />

    <!-- External files root for export downloads (progress xlsx) -->
    <external-files-path name="exports" path="." />

    <!-- Internal files directory -->
    <files-path name="internal_files" path="." />
</paths>
