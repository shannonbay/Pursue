<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:minHeight="72dp"
    android:background="?attr/selectableItemBackground">

    <FrameLayout
        android:id="@+id/notification_avatar_container"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/notification_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            android:background="@color/surface_variant" />

        <TextView
            android:id="@+id/notification_avatar_overlay"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|end"
            android:background="@color/surface"
            android:gravity="center"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="ðŸ”¥" />

    </FrameLayout>

    <TextView
        android:id="@+id/notification_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/on_surface"
        app:layout_constraintEnd_toStartOf="@id/notification_unread_dot"
        app:layout_constraintStart_toEndOf="@id/notification_avatar_container"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Alex reacted ðŸ”¥ to your 30 min run log" />

    <TextView
        android:id="@+id/notification_context"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="@color/on_surface_variant"
        app:layout_constraintEnd_toEndOf="@id/notification_body"
        app:layout_constraintStart_toStartOf="@id/notification_body"
        app:layout_constraintTop_toBottomOf="@id/notification_body"
        tools:text="Morning Runners Â· 2 hours ago" />

    <View
        android:id="@+id/notification_unread_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/bg_notification_unread_dot"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

    <View
        android:id="@+id/notification_left_accent"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
