<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/surface_variant"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/pulse_header_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pulse_header_today"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="@color/on_surface_variant" />

            <TextView
                android:id="@+id/pulse_header_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="@color/on_surface_variant"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Avatar scroll area with right-edge fade -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:id="@+id/pulse_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fadingEdge="none">

                <LinearLayout
                    android:id="@+id/pulse_avatar_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="4dp" />

            </HorizontalScrollView>

            <!-- Right-edge fade overlay (visible for Medium/Large tiers) -->
            <View
                android:id="@+id/pulse_fade_right"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/bg_pulse_fade"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
