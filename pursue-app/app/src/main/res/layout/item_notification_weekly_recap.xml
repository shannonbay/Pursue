<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <!-- Gold left accent bar (full height) -->
    <View
        android:id="@+id/recap_left_accent"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/milestone_gold_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Unread dot (top-end corner) -->
    <View
        android:id="@+id/recap_unread_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_notification_unread_dot"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <!-- Main content column -->
    <LinearLayout
        android:id="@+id/recap_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recap_left_accent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- "ðŸ“Š WEEKLY RECAP" label -->
        <TextView
            android:id="@+id/recap_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š  WEEKLY RECAP"
            android:textColor="@color/milestone_gold_border"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.08" />

        <!-- Period label (e.g. "Feb 10â€“16") -->
        <TextView
            android:id="@+id/recap_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="Feb 10â€“16" />

        <!-- Group name -->
        <TextView
            android:id="@+id/recap_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            tools:text="Morning Momentum" />

        <!-- Hero: completion rate block -->
        <LinearLayout
            android:id="@+id/recap_hero_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_recap_hero"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Rate number + label row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recap_rate_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    tools:text="87%"
                    tools:textColor="@color/primary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recap_completion_rate_label"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <ProgressBar
                        android:id="@+id/recap_completion_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="6dp"
                        android:max="100"
                        android:minHeight="6dp"
                        android:maxHeight="6dp"
                        tools:progress="87" />

                    <TextView
                        android:id="@+id/recap_delta_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        tools:text="â†‘ 5% vs last week" />

                </LinearLayout>
            </LinearLayout>

            <!-- Tone text below the rate row -->
            <TextView
                android:id="@+id/recap_tone_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="italic"
                tools:text="Strong week! Keep the momentum going." />

        </LinearLayout>

        <!-- â”€â”€ Highlights section â”€â”€ -->
        <TextView
            android:id="@+id/recap_highlights_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/recap_highlights_header"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="?attr/colorOnSurface" />

        <View
            android:id="@+id/recap_highlights_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorOutlineVariant" />

        <!-- Populated programmatically -->
        <LinearLayout
            android:id="@+id/recap_highlights_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical" />

        <!-- â”€â”€ Goal Breakdown section â”€â”€ -->
        <TextView
            android:id="@+id/recap_goals_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/recap_goals_header"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="?attr/colorOnSurface" />

        <View
            android:id="@+id/recap_goals_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorOutlineVariant" />

        <!-- Populated programmatically -->
        <LinearLayout
            android:id="@+id/recap_goals_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical" />

        <!-- â”€â”€ Group Heat section â”€â”€ -->
        <TextView
            android:id="@+id/recap_heat_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/recap_heat_header"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone"
            tools:visibility="visible" />

        <View
            android:id="@+id/recap_heat_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorOutlineVariant"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/recap_heat_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone"
            tools:text="Blaze (Score: 68)  Â·  9-day heat streak"
            tools:visibility="visible" />

        <!-- Open Group CTA -->
        <TextView
            android:id="@+id/recap_open_group_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/recap_open_group"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/primary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
