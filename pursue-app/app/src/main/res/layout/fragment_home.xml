<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Groups RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/groups_recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="80dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/item_group_card" />

            <!-- Loading Skeleton (initially hidden) -->
            <LinearLayout
                android:id="@+id/skeleton_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <include
                    layout="@layout/skeleton_group_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    layout="@layout/skeleton_group_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    layout="@layout/skeleton_group_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Empty State (initially hidden) -->
            <include
                android:id="@+id/empty_state"
                layout="@layout/empty_state_groups"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Error State (initially hidden) -->
            <FrameLayout
                android:id="@+id/error_state_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Scrim (visible when speed dial expanded; tap to collapse) -->
    <View
        android:id="@+id/speed_dial_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <!-- Speed dial container: main FAB + mini FABs with labels -->
    <LinearLayout
        android:id="@+id/speed_dial_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="end">

        <!-- Join Group row (label + mini FAB) -->
        <LinearLayout
            android:id="@+id/speed_dial_row_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/speed_dial_label_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/join_group"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/on_surface"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:minHeight="40dp"
                android:gravity="center_vertical" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_join_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/join_group"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_person_add"
                app:tint="@color/on_primary"
                app:maxImageSize="24dp" />
        </LinearLayout>

        <!-- Browse Group Ideas row (label + mini FAB) -->
        <LinearLayout
            android:id="@+id/speed_dial_row_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/speed_dial_label_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/browse_group_ideas"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/on_surface"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:minHeight="40dp"
                android:gravity="center_vertical" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_browse_group_ideas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/browse_group_ideas"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_lightbulb"
                app:tint="@color/on_primary"
                app:maxImageSize="24dp" />
        </LinearLayout>

        <!-- Start Challenge row (label + mini FAB) -->
        <LinearLayout
            android:id="@+id/speed_dial_row_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/speed_dial_label_challenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_challenge"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/on_surface"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:minHeight="40dp"
                android:gravity="center_vertical" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_start_challenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/start_challenge"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_compass"
                app:tint="@color/on_primary"
                app:maxImageSize="24dp" />
        </LinearLayout>

        <!-- Create Group row (label + mini FAB) -->
        <LinearLayout
            android:id="@+id/speed_dial_row_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/speed_dial_label_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_group"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/on_surface"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:minHeight="40dp"
                android:gravity="center_vertical" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_create_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/create_group"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_input_add"
                app:tint="@color/on_primary"
                app:maxImageSize="24dp" />
        </LinearLayout>

        <!-- Main FAB (56dp; rotates 45Â° when expanded) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_speed_dial_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/fab_open_menu"
            app:srcCompat="@android:drawable/ic_input_add"
            app:tint="@color/on_primary"
            app:maxImageSize="34dp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
