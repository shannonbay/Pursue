<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Activity Text -->
        <TextView
            android:id="@+id/activity_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/on_surface"
            tools:text="âœ“ Alex completed '30 min run'" />

        <!-- Timestamp and react button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/activity_timestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@color/on_surface_variant"
                tools:text="2 hours ago" />

            <ImageButton
                android:id="@+id/activity_react_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/reaction_button_content_description"
                android:src="@drawable/ic_heart_plus"
                android:padding="12dp"
                android:focusable="true"
                android:clickable="true" />
        </LinearLayout>

        <!-- Reactions summary (shown when activity has reactions) -->
        <LinearLayout
            android:id="@+id/reactions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:minHeight="48dp">

            <TextView
                android:id="@+id/reactions_emojis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="ðŸ”¥ðŸ’ªâ¤ï¸" />

            <TextView
                android:id="@+id/reactions_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@color/on_surface_variant"
                tools:text="Robert J. and 2 others" />
        </LinearLayout>

        <!-- Progress photo (shown for progress_logged with photo) -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/activity_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:contentDescription="@string/progress_photo_content_description"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Corner.Small"
            tools:visibility="visible"
            tools:src="@android:drawable/ic_menu_gallery" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
