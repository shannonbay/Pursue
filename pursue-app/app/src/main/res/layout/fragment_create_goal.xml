<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cancel"
            android:src="@drawable/ic_chevron_right"
            android:rotation="180"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/on_surface" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/create_goal_title"
            android:textColor="@color/on_surface"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/back_button"
            app:layout_constraintEnd_toStartOf="@id/save_button"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="@id/back_button" />

        <ImageButton
            android:id="@+id/save_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/save_goal"
            android:src="@drawable/ic_check"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary" />

        <!-- Content Container -->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button">

            <!-- Icon Section -->
            <TextView
                android:id="@+id/icon_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/goal_icon_label"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/icon_container"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/primary"
                    android:contentDescription="@string/goal_icon_label">

                    <TextView
                        android:id="@+id/icon_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/default_goal_icon"
                        android:textSize="32sp"
                        tools:text="ðŸŽ¯" />
                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_choose_icon"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/choose_icon"
                    android:text="@string/choose_icon"
                    android:textColor="@color/primary" />
            </LinearLayout>

            <!-- Goal Title -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_goal_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="@string/goal_title_label"
                app:errorEnabled="true"
                app:errorTextColor="@color/error">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_goal_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="100"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    tools:text="Run 3x per week" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cadence Section -->
            <TextView
                android:id="@+id/cadence_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/cadence_label"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/cadence_toggle_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_cadence_daily"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/cadence_daily"
                    android:text="@string/cadence_daily"
                    android:textSize="12sp"
                    app:cornerRadius="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_cadence_weekly"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/cadence_weekly"
                    android:text="@string/cadence_weekly"
                    android:textSize="12sp"
                    app:cornerRadius="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_cadence_monthly"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/cadence_monthly"
                    android:text="@string/cadence_monthly"
                    android:textSize="12sp"
                    app:cornerRadius="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_cadence_yearly"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/cadence_yearly"
                    android:text="@string/cadence_yearly"
                    android:textSize="12sp"
                    app:cornerRadius="20dp" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Metric Type Section -->
            <TextView
                android:id="@+id/metric_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/metric_type_label"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/metric_type_toggle_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_metric_binary"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/metric_type_binary"
                    android:text="@string/metric_type_binary"
                    android:textSize="12sp"
                    app:cornerRadius="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_metric_numeric"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/metric_type_numeric"
                    android:text="@string/metric_type_numeric"
                    android:textSize="12sp"
                    app:cornerRadius="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_metric_duration"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/metric_type_duration"
                    android:text="@string/metric_type_duration"
                    android:textSize="12sp"
                    app:cornerRadius="20dp" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Target Section -->
            <LinearLayout
                android:id="@+id/target_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/target_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/target_label"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_target_value"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/target_hint"
                        app:errorEnabled="true"
                        app:errorTextColor="@color/error">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_target_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="@color/on_surface"
                            android:textSize="16sp"
                            tools:text="3" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/target_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/target_times_per_week"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="14sp"
                        tools:text="times per week" />
                </LinearLayout>
            </LinearLayout>

            <!-- Unit Section -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_unit"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/unit_label"
                android:visibility="gone"
                tools:visibility="visible">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    tools:text="miles" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Start Date Section -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_start_date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="@string/start_date_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/start_date_label"
                    android:focusable="false"
                    android:inputType="none"
                    android:text="@string/start_date_today"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Save Button (Bottom) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_save_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="@string/save_goal"
                style="@style/Widget.MaterialComponents.Button"
                android:contentDescription="@string/save_goal" />

        </LinearLayout>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/loading_indicator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
